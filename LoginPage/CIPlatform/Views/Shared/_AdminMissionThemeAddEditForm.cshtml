@using CIPlatform.Models.AdminViewModels
@model AdminMissionThemeVM

    <div class="modal fade" id="missionThemeAddEditModal-@Model.MissionThemeId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel-@Model.MissionThemeId">Mission Theme ADD/EDIT</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="adminMissionThemeAddEditForm-@Model.MissionThemeId">
                <div class="modal-body">
                    <div class="missiontheme-add-view mt-3">
                        <div class="missiontheme-add-header w-100 fw-bold border">
                            <h3 class="p-3  bg-light border-bottom">Add</h3>
                            <div class="my-3 ms-4">
                                <label  asp-for="Title" class="form-label fw-lighter" for="missiontheme-add-title-@Model.MissionThemeId">Title</label>
                                <input asp-for="Title" type="text" id="missiontheme-add-title-@Model.MissionThemeId" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            
                            <div class="my-3 mb-5 ms-4">
                                <label class="form-label fw-lighter" asp-for="Status" for="misisontheme-add-status-@Model.MissionThemeId">Status</label>
                                <select class="form-select" asp-for="Status" id="misisontheme-add-status-@Model.MissionThemeId">
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Status"></span>

                                <input type="hidden" value="@Model.MissionThemeId" id="myMissionthemeId-@Model.MissionThemeId" asp-for="MissionThemeId" />
                            </div>
                        </div>

                        <div class="d-flex w-100 justify-content-end cms-add-btns mt-3">
                            <button type="button" class="dismiss-modal-button btn bg-white  text-dark border border-dark rounded-pill px-3 me-2" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn bg-white text-orange bg-white border-orange rounded-pill px-3" data-missionthemeid="@Model.MissionThemeId" onclick="adminMissionThemeAddUpdate(this)">Submit</button>
                        </div>
                    </div>
                </div>
                
                </form>
            </div>
        </div>
    </div>

    
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>