<div id="v-pills-cmspage" >
    <div class="cms-header border-bottom border-light">
        <span class="h2 border-bottom border-dark">CMS Page</span>
    </div>
    <div class="d-flex search-cms-and-add mt-3 justify-content-between">
        <div class="search-user d-flex align-items-center border ps-3">
            <img src="/assets/search.png" alt="" style="height:14px">&nbsp;&nbsp;
            <input class="form-control border border-0" type="search" placeholder="Search" aria-label="Search" id="search-query">
        </div>
        <div class="user-add">
            <button class="btn bg-white text-orange border-orange px-3 rounded-pill"> <i class="bi bi-plus"></i> Add </button>
        </div>
    </div>
    <div class="cms-table mt-4">
        <table class="table" style="">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Records)
                {
                    <tr>
                        <td>@item.Title</td>
                        @if ((bool)item.Status)
                        {
                            <td class="text-success">Active</td>
                        }
                        else
                        {
                            <td class="text-danger">Inactive</td>
                        }
                        <td>
                            <a href="" class="fst-normal text-decoration-none">
                                <i class="bi text-orange bi-pencil-square me-2"></i>
                            </a>
                            <a href="" id="deleteTimebasedTimesheet">
                                <i class="text-secondary bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
