@using CIPlatform.Models.AdminViewModels
@model PageList<AdminCmsVM>


<table class="table" style="">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="">
@foreach (var item in Model.Records)
{
    <tr>
        <td>@item.Title</td>
        @if ((bool)item.Status)
        {
            <td class="text-success">Active</td>
        }
        else
        {
            <td class="text-danger">Inactive</td>
        }
        <td>
            <a href="" class="fst-normal text-decoration-none" data-bs-toggle="modal" data-bs-target="#cmsAddModal-@item.CMSId">
                <i class="bi text-orange bi-pencil-square me-2"></i>
            </a>
            <partial name="_AdminCmsAddForm" model="@item" />

            <button class="btn bg-white border-0 px-4 rounded-pill" id="deleteTimebasedTimesheet" data-cmsid="@item.CMSId">
                <i class="text-secondary bi bi-trash"></i>
            </button>
        </td>
    </tr>
}


</tbody>
        </table>


         @{
            double d = Model.Count/ 10.0;
            double pages = Math.Ceiling(d);
        }

        <div class="pagination-nav d-flex flex-row-reverse w-100">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item-cms d-flex">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><<</span>
                        </a>
                    </li>
                    <li class="page-item-cms d-flex">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><</span>
                        </a>
                    </li>
                   @for (int i = 1; i <= @pages; i++)
                    {
                        <li class="page-item-cms" id="@i"><a class="page-link">@i</a></li>
                    }
                    <li class="page-item-cms d-flex">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">></span>
                        </a>
                    </li>
                    <li class="page-item-cms d-flex">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">>></span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>