@using CIPlatform.Models.AdminViewModels
@model PageList<AdminMissionThemeVM>

<div id="v-pills-missiontheme" >
    <div class="missiontheme-header border-bottom border-light">
        <span class="h2 border-bottom border-dark">Mission Theme</span>
    </div>
    <div>

    </div>
    <div class="d-flex search-missiontheme-and-add mt-3 justify-content-between">
        <div class="search-missiontheme d-flex align-items-center border ps-3">
            <img src="/assets/search.png" alt="" style="height:14px">&nbsp;&nbsp;
            <input class="form-control border border-0" type="search" placeholder="Search" aria-label="Search" id="search-missiontheme-query">
        </div>
        <div class="missiontheme-add">
            <button class="btn bg-white text-orange border-orange px-3 rounded-pill" id="admin-missiontheme-add" data-bs-toggle="modal" data-bs-target="#missionThemeAddEditModal-0"> <i class="bi bi-plus"></i> Add </button>
        </div>
    </div>
    <div class="missiontheme-table mt-4">
        <table class="table" style="">
            <thead>
                <tr>
                    <th scope="col">Theme Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="admin-missiontheme-table-body-wrapper">
                <partial name="_AdminMissionThemeTablePartial" model="Model.Records" />
            </tbody>
        </table>

         @{
            double d = Model.Count/ 10.0;
            double pages = Math.Ceiling(d);
        }


        <div class="pagination-nav d-flex flex-row-reverse w-100">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item-missiontheme d-flex">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><<</span>
                        </a>
                    </li>
                    <li class="page-item-missiontheme d-flex">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= @pages; i++)
                    {
                        <li class="page-item-missiontheme" id="@i"><a class="page-link">@i</a></li>
                    }

                    <li class="page-item-missiontheme d-flex">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">></span>
                        </a>
                    </li>
                    <li class="page-item-missiontheme d-flex">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">>></span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</div>


<partial name="_AdminMissionThemeAddEditForm" model="new AdminMissionThemeVM(){}" />