<div class="modal fade" id="volGoalsForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-4 fw-semibold" id="exampleModalLabel">Please input below Volunteering Hours</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="">
      <div class="modal-body">
        <div class="mb-3">
          <label for="volMission" class="form-label">Mission</label>
          <select class="form-select" id="volMission" aria-label="Default select example">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>      
        </div>
        <div class="mb-3">
          <label for="volAction" class="form-label">Actions</label>
          <input type="number" id="volAction" class="form-control">
        </div>
        <div class="mb-3">
          <label for="dateVolunteered" class="form-label">Date Volunteered</label>
         <input type="date" id="dateVolunteered" class="form-control">
        </div>
        <div class="mb-3">
          <label for="volMessage" class="form-label">Message</label>
          <textarea class="form-control" id="volMessage" rows="3"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn bg-white border-dark text-dark rounded-pill px-3" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn bg-white text-orange border-orange px-3 rounded-pill">Submit</button>
      </div>
    </form>
    </div>
  </div>
</div>


