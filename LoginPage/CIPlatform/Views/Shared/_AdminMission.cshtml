@{
}
@using CIPlatform.Models.AdminViewModels
@model PageList<AdminMissionVM>

<div  id="v-pills-mission" >
    <div class="mission-header border-bottom border-light">
        <span class="h2 border-bottom border-dark">Mission</span>
    </div>
    <div class="d-flex search-mission-and-add mt-3 justify-content-between">
        <div class="search-mission d-flex align-items-center border ps-3">
            <img src="/assets/search.png" alt="" style="height:14px">&nbsp;&nbsp;
            <input class="form-control border border-0" type="search" placeholder="Search" aria-label="Search" id="search-mission-query">
        </div>
        <div class="mission-add">
            <button class="btn bg-white text-orange border-orange px-3 rounded-pill" data-bs-toggle="modal" id="AdminAddMissionButton-0" data-bs-target="#AdminAddEditModal-0"> <i class="bi bi-plus"></i> Add </button>
        </div>
    </div>
    <div class="mission-table mt-4">
        <table class="table" style="">
            <thead>
                <tr>
                    <th scope="col">Mission Title</th>
                    <th scope="col">Mission Type</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="admin-mission-table-wrapper">
                <partial name="_AdminMissionTablePartial" model="@Model.Records" />
            </tbody>
        </table>

          @{
        double d = Model.Count / 10.0;
        double pages = Math.Ceiling(d);
    }

    <div class="pagination-nav d-flex flex-row-reverse w-100">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item page-item-mission d-flex">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true"><<</span>
                    </a>
                </li>
                <li class="page-item page-item-mission d-flex">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true"><</span>
                    </a>
                </li>
                @for (int i = 1; i <= @pages; i++)
                {
                    <li class="page-item page-item-mission" id="@i"><a class="page-link">@i</a></li>
                }
                <li class="page-item page-item-mission d-flex">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">></span>
                    </a>
                </li>
                <li class="page-item page-item-mission d-flex">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">>></span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>

    </div>
</div>

<partial name="_AdminMissionAddForm" model="new AdminMissionVM()" />